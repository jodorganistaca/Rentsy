<link rel="stylesheet" href="/stylesheets/addObject.css">


<!-- Bootstrap row -->
<div class="row" id="body-row">
    

    <!-- MAIN -->
    <div class="col py-3">

        <div class="col-md-12">

            <body>
                <div id="fondoVideo">
                    <video id="bg-video" autoplay="true" loop="loop" preload="metadata" muted="muted">
                        <source src="/Assets/videos/background_video.webm" type="video/webm" />
                    </video>
                </div>

                <div class="row">
                    <div class="col-lg-12 mx-auto" style="overflow-y: scroll; height:85vh; ">
                        <div class="booking-form">
                            <form method="post" enctype="multipart/form-data" action="/addObject">
                                <div class="form-group">
                                    <span class="form-label">Nombre</span>
                                    <input name="name" class="form-control" type="text" placeholder="Escribe qué objeto deseas poner en arriendo"
                                        required="true">
                                </div>
                                <div class="form-group">
                                    <span class="form-label">Descripción</span>
                                    <input name="description" class="form-control" type="text"  placeholder="Escribe una descripción de tu objeto"
                                        required="true">
                                </div>
                                <div class="form-group">
                                    <span class="form-label">Precio por hora</span>
                                    <input name="priceHour" type="number" min="1" step="any" placeholder="A que precio lo pones por hora" required="true"/>
                                </div>
                                <div class="form-group">
                                    <span class="form-label">Precio por Dia</span>
                                    <input name="priceDay" type="number" min="1" step="any" placeholder="A que precio lo pones por dia" required="true"/>
                                </div>
                                <div class="form-group">
                                    <span class="form-label">Fecha Inicio</span>
                                    <input name="dateBegin" type="date" placeholder="Fecha inicial" required="true"/>
                                </div>
                                <div class="form-group">
                                    <span class="form-label">Fecha Final</span>
                                    <input name="dateEnd" id="litepicker" placeholder="Fecha final" required="true"/>
                                </div>
                                <div class="form-group">
                                    <span class="form-label">Escoge un archivo</span>
                                    <input type="file" name="filename" required="true"/>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Subir" required="true"/>
                                </div>
                            </form>    
                        </div>
                    </div>
                </div>

            </body>
            <div id="creditos">
                <div id="creditos-texto">
                    <p style="color: white !important;">Vídeo de: <a style="color: white !important;"
                        href="https://filmpac.com/filmpac-site-demo/ref/16/">FILMPAC</a></p>
                </div>
            </div>
            <script src="/javascripts/layouts.js"></script>
        </div>
    </div>
    <!-- Main Col END -->

</div>
