 <div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close"  onclick="closeModal(); return false;" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form onsubmit="validar();">
                  <div class="form-group bmd-form-group">
                    <span class="form-label">Arrendatario</span>
                    <input class="form-control" type="text" disabled="true" value="{{userName}}">
                  </div>
                  <span class="form-label">Arrendador</span>
                    <input class="form-control" type="text" id="arrendador" disabled="true">
                  <div class="form-group">
    <label for="descripcion" class="bmd-label-floating">Descripción</label>
    <textarea class="form-control" id="descripcion" rows="3"></textarea>
  </div>
                  <div class="row" id="divHoras">
                    <div class="col-sm-6">
                      <div class="form-group bmd-form-group">
                        <span class="form-label">Precio por hora</span>
                        <input id="precioHora" name="" class="form-control " type="text" required="true" aria-haspopup="true" aria-readonly="false" aria-owns="horaInicial_root">
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group bmd-form-group">
                        <span class="form-label">Precio por día</span>
                        <input id="precioDia" class="form-control " type="text"  required="true" aria-haspopup="true" aria-readonly="false" aria-owns="horaFinal_root">
                      </div>
                    </div>
                  </div>
                </form>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-danger" id="borrar" style="margin-right: 75px;
    background-color: #2042af;"><i class="material-icons">delete_forever</i> Borrar</button>
        <button type="button" class="btn btn-primary" id="guardar" style="margin-right: 10px"><i class="material-icons">save</i> Guardar</button>
        <button type="button" class="btn btn-alert" onclick="closeModal(); return false;"><i class="material-icons">close</i>Cerrar </button>
      </div>
    </div>
  </div>
</div>
