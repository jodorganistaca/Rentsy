<link rel="stylesheet" href="/stylesheets/rent.css">
{{#if canvasWallpaper}}
<canvas id="canvas">
</canvas>
{{/if}}
<!-- Bootstrap row -->
<div class="row" id="body-row">
    <!-- Sidebar -->
    <div id="sidebar-container" class="sidebar-expanded d-none col-2">
        <!-- d-* hiddens the Sidebar in smaller devices. Its itens can be kept on the Navbar 'Menu' -->
        <!-- Bootstrap List Group -->
        <ul class="list-group sticky-top sticky-offset" style="background-color: rgba(20,20,20,0.2);">
            <!-- Separator with title -->
            <li class="list-group-item sidebar-separator-title text-muted d-flex align-items-center menu-collapsed">
                <small>BÚSQUEDA</small>
            </li>
            <!-- /END Separator -->
            <!-- Menu with submenu -->
            <div class="tags">
               {{#each searchQuery}}
               <p class="success">{{this}}</p>
               {{/each}}
            </div>
            <li class="list-group-item sidebar-separator-title text-muted d-flex align-items-center menu-collapsed">
                <small>REPETIR BÚSQUEDA</small>
            </li>
            <!-- Logo -->
            <li class="sidebar-separator logo-separator d-flex justify-content-center">
                <button type="button" class="btn btn-info" style="font-size: 11.5px;">Buscar de nuevo</button>
            </li>
        </ul>
        <!-- List Group END-->
    </div>
    <!-- sidebar-container END -->

    <!-- MAIN -->
    <div class="col py-3">

        <div class="col-md-12">

            <body>

                <div class="row">
                    <div class="col-lg-12 mx-auto" style="overflow-y: scroll; height:85vh; ">
                        <!-- List group-->
                        <ul class="list-group shadow" style="margin-top: 6px;">
                            <!-- list group item-->
                            {{#each objects}}
                            <li class="list-group-item objetos">
                                <!-- Custom content-->
                                <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                                    <div class="media-body order-2 order-lg-1">
                                        <h5 class="mt-0 font-weight-bold mb-2">{{this.name}}</h5>
                                        <p class="font-italic text-muted mb-0 small">{{this.description}}</p>
                                        <div class="d-flex align-items-center justify-content-between mt-1">
                                            <h6 class="font-weight-bold my-2">{{this.priceHour}}</h6>
                                            <ul class="list-inline small">
                                                <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i>
                                                </li>
                                                <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i>
                                                </li>
                                                <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i>
                                                </li>
                                                <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i>
                                                </li>
                                                <li class="list-inline-item m-0"><i class="fa fa-star-o text-gray"></i>
                                                </li>
                                            </ul>
                                        </div>
                                    </div><img src="{{this.photoURL}}" alt="Generic placeholder image" width="200"
                                        class="ml-lg-5 order-1 order-lg-2">
                                    <div class="detail">
                                        <p>Publicado por: {{this.arrendador.userName}} </p>
                                        <a href="#" class="btn btn-primary ">Arrendar</a>
                                        <a href="#" class="btn btn-info btn-interested">Me interesa</a>
                                    </div>
                                </div>
                                <!-- End -->

                            </li>
                            {{/each}}
                            <!-- End -->
                        </ul>
                        <!-- End -->
                    </div>
                </div>

            </body>
            <script src="/javascripts/layouts.js"></script>
        </div>
    </div>
    <!-- Main Col END -->

</div>